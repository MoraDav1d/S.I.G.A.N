<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIGAN | Registro</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="login-page-container">
        <div class="login-card" style="max-width: 500px;"> 
            <h2>Crear Cuenta</h2>
            <p class="subtitle">Ingrese sus datos de productor</p>

            <form action="/auth/register" method="POST" id="registroForm">
                
                <div class="form-row">
                    <div class="input-wrapper" id="box-nombre">
                        <i class="fa-solid fa-user"></i>
                        <input type="text" name="nombre" id="nombre" placeholder="Nombre" required>
                    </div>
                    <div class="input-wrapper" id="box-apellido">
                        <i class="fa-solid fa-user"></i>
                        <input type="text" name="apellido" id="apellido" placeholder="Apellido" required>
                    </div>
                </div>
                <small id="error-names" class="error-hint"></small>

                <div class="row-custom">
                    <div class="prefix-tag">V-</div>
                    <div class="input-wrapper" id="box-cedula" style="margin-bottom: 0; flex: 1;">
                        <input type="text" name="cedula" id="cedula" placeholder="Cédula (Máx 40M)" maxlength="8" required>
                    </div>
                </div>
                <small id="error-cedula" class="error-hint"></small>

                <div class="row-custom">
                    <select name="codigo" class="select-custom">
                        <option value="0412">0412</option>
                        <option value="0414">0414</option>
                        <option value="0416">0416</option>
                        <option value="0424">0424</option>
                        <option value="0426">0426</option>
                        <option value="0422">0422</option>
                    </select>
                    <div class="input-wrapper" id="box-telefono" style="margin-bottom: 0; flex: 1;">
                        <input type="text" name="telefono_base" id="telefono" placeholder="Número (7 dígitos)" maxlength="7" required>
                    </div>
                </div>
                <small id="error-telefono" class="error-hint"></small>

                <div class="input-wrapper" id="box-email">
                    <i class="fa-solid fa-envelope"></i>
                    <input type="email" name="correo" id="email" placeholder="Correo electrónico" required>
                </div>
                <small id="emailFeedback" class="error-hint"></small>

                <div class="input-wrapper password-wrapper" id="box-pass1">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" name="password" id="pass1" placeholder="Contraseña" required>
                    <i class="fa-solid fa-eye toggle-password" id="eye1" onclick="togglePass('pass1', 'eye1')"></i>
                </div>
                <div id="passBar" style="height:4px; width:0%; transition:0.3s; margin-bottom:5px; border-radius:2px;"></div>
                <small id="passFeedback" class="error-hint"></small>

                <div class="input-wrapper password-wrapper" id="box-pass2">
                    <i class="fa-solid fa-check-double"></i>
                    <input type="password" name="confirmPassword" id="pass2" placeholder="Confirmar contraseña" required>
                    <i class="fa-solid fa-eye toggle-password" id="eye2" onclick="togglePass('pass2', 'eye2')"></i>
                </div>
                <small id="error-pass2" class="error-hint"></small>

                <button type="submit" class="btn-entrar" id="submitBtn">Registrar Productor</button>
            </form>
        </div>
    </div>

    <script>
        function togglePass(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("fa-eye-slash", "fa-eye");
            }
        }

        const submitBtn = document.getElementById('submitBtn');

        // Nombres sin números
        ['nombre', 'apellido'].forEach(id => {
            document.getElementById(id).addEventListener('input', (e) => {
                const box = document.getElementById('box-' + id);
                if (/[0-9]/.test(e.target.value)) {
                    document.getElementById('error-names').textContent = "❌ No se permiten números";
                    box.style.border = "1.5px solid red";
                } else {
                    document.getElementById('error-names').textContent = "";
                    box.style.border = "1px solid #ccc";
                }
            });
        });

        // Cédula Venezolana estricta
        document.getElementById('cedula').addEventListener('input', (e) => {
            e.target.value = e.target.value.replace(/\D/g, '');
            const val = e.target.value;
            const err = document.getElementById('error-cedula');
            const box = document.getElementById('box-cedula');
            if (val.length > 0 && (val.length < 7 || parseInt(val) > 40000000)) {
                err.textContent = "❌ Cédula inválida (7-8 dígitos, menor a 40M)";
                box.style.border = "1.5px solid red";
            } else {
                err.textContent = "";
                box.style.border = "1px solid #ccc";
            }
        });

        // Correo (AJAX)
        document.getElementById('email').addEventListener('blur', async (e) => {
            const email = e.target.value.trim().toLowerCase();
            const feed = document.getElementById('emailFeedback');
            if (email.includes('@')) {
                const res = await fetch(`/auth/check-email?email=${email}`);
                const data = await res.json();
                if (data.exists) {
                    feed.innerHTML = 'Este correo ya existe, <a href="/login" style="color:red; text-decoration:underline;">intenta iniciar sesión</a>';
                    submitBtn.disabled = true;
                } else {
                    feed.textContent = "";
                    submitBtn.disabled = false;
                }
            }
        });

        // Fuerza de contraseña
        document.getElementById('pass1').addEventListener('input', (e) => {
            const v = e.target.value;
            const bar = document.getElementById('passBar');
            const feed = document.getElementById('passFeedback');
            let strong = v.length >= 8 && /[A-Z]/.test(v) && /\d/.test(v);
            feed.textContent = strong ? "✅ Contraseña segura" : "⚠️ Falta: 8 caracteres, mayúscula y número";
            feed.style.color = strong ? "green" : "red";
            bar.style.width = strong ? "100%" : "30%";
            bar.style.backgroundColor = strong ? "green" : "red";
        });

        // Coincidencia
        document.getElementById('pass2').addEventListener('input', (e) => {
            const p1 = document.getElementById('pass1').value;
            const err = document.getElementById('error-pass2');
            err.textContent = (e.target.value === p1) ? "✅ Coinciden" : "❌ No coinciden";
            err.style.color = (e.target.value === p1) ? "green" : "red";
        });
    </script>
</body>
</html>